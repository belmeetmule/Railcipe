<section class="container">
<% if user_signed_in? %>
<%=link_to "Back", user_recipe_path(current_user, params[:recipe_id])%>
<% end %>
<h2 class="text-center"> Shooping list </h2>
<div class="d-flex justify-content-between mb-3 mt-3">
<p> <strong> Amount of food items to buy: </strong>
    <span>
        <%=@general_shopping_lists.count %> 
    </span>
</p>
<p> <strong>Total value of food needed: </strong>
    <span>
        <%= @general_shopping_lists.sum { |general_shopping_list| general_shopping_list[:price] } %> 
    </span>
</div>
<div>
    <table class="table table-striped table-sm">
        <thead class="table-secondary">
            <tr>
                <th>Food</th>
                <th>Quantity</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody class="table-group-divider">
            <% @general_shopping_lists.each do |item| %>
            <tr>
                <td><%= item[:name] %></td>
                <td><%= item[:quantity] %></td>
                <td><%= item[:price] %></td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>
</section>