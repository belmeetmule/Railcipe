<section class="container">

<div class=" w-50 d-flex flex-column mx-auto bg-secondary-subtle justify-content-center align-items-center">
<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name))  do |f| %>
  <div class="form-group mt-2">
    <%= f.label :email, class:"form-label"  %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control fs-4", style:"" %>
  </div>

  <div class="form-group mt-2">
    <%= f.label :password, class:"form-label"  %><br />
    <%= f.password_field :password, type: "password", autocomplete: "current-password", class:"form-control fs-4", id:"current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-check mt-2">
      <%= f.check_box :remember_me, type:"checkbox", class: "form-check-input fs-5", id: "remember-me" %>
      <%= f.label :remember_me, class:"form-check-label fs-5", for: "remember-me" %>
    </div>
  <% end %>

  <div class="form-group text-center">
    <%= f.submit "Log in", class: "btn btn-primary fs-5 px-5" %>
  </div>
<% end %>
<div class="mt-3 text-center fs-6">
  <%= render "devise/shared/links", class:"text-decoration-none" %>
</div>
</div>
</section>
